{
  "name": "@metamask/push-platform-notifications-controller",
  "version": "0.0.0",
  "description": "Manages push notifications for MetaMask decentralized authentication systems",
  "keywords": [
    "MetaMask",
    "Ethereum"
  ],
  "homepage": "https://github.com/MetaMask/core/tree/main/packages/push-platform-notifications-controller#readme",
