{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"experimentalDecorators": true,
		"importHelpers": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"removeComments": false,
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
    "target": "es6"
	},
	"typedocOptions": {
		"exclude": "**/*.test.ts",
		"excludeNotExported": true,
		"excludePrivate": true,
		"hideGenerator": true,
		"mode": "modules",
		"out": "docs",
		"theme": "default"
	},
	"include": [
		"./src/**/*.ts"
	]
}
