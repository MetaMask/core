{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
