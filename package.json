{
  "name": "@metamask/controllers-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Collection of platform-agnostic modules for creating secure data models for cryptocurrency wallets",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json --verbose",
    "build:clean": "yarn rimraf './**/*.tsbuildinfo' './dist'",
    "build:watch": "yarn build --watch",
    "doc": "yarn workspaces foreach --parallel --interlaced --jobs 3 --verbose run doc",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' '**/*.yml' '!.yarnrc.yml' --ignore-path .gitignore",
    "prepack": "yarn build",
    "setup": "yarn install",
    "test": "yarn workspaces foreach --verbose run test"
  },
  "dependencies": {
    "@lavamoat/allow-scripts": "^2.0.2",
    "@metamask/auto-changelog": "^2.6.0",
    "@metamask/eslint-config": "^9.0.0",
    "@metamask/eslint-config-jest": "^9.0.0",
    "@metamask/eslint-config-nodejs": "^9.0.0",
    "@metamask/eslint-config-typescript": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "isomorphic-fetch": "^3.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-packagejson": "^2.2.17",
    "rimraf": "^3.0.2",
    "typescript": "~4.6.3",
    "uuid": "^8.3.2"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=12.0.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@keystonehq/bc-ur-registry-eth>hdkey>secp256k1": true,
      "babel-runtime>core-js": false,
      "eth-sig-util>ethereumjs-abi>ethereumjs-util>keccakjs>sha3": true,
      "eth-sig-util>ethereumjs-util>keccak": true,
      "eth-sig-util>ethereumjs-util>secp256k1": true,
      "ethereumjs-util>ethereum-cryptography>keccak": true,
      "ethereumjs-util>ethereum-cryptography>secp256k1": true
    }
  }
}
